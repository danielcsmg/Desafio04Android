<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".detalheproduto.DetalheProdutoActivity">

    <ImageView
        android:id="@+id/ivCarrinho"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/carrinho_de_compras"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/cor1" />

    <TextView
        android:id="@+id/tvNomeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivCarrinho"
        app:layout_constraintStart_toEndOf="@+id/ivCarrinho"
        app:layout_constraintTop_toTopOf="@+id/ivCarrinho"
        tools:text="Item do carrinho" />

    <TextView
        android:id="@+id/tvQtdProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/ivCarrinho"
        app:layout_constraintTop_toBottomOf="@+id/ivCarrinho"
        tools:text="Item do carrinho" />

    <TextView
        android:id="@+id/tvValorUnitario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/ivCarrinho"
        app:layout_constraintTop_toBottomOf="@+id/tvQtdProduto"
        tools:text="Item do carrinho" />

    <TextView
        android:id="@+id/tvReceita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/ivCarrinho"
        app:layout_constraintTop_toBottomOf="@+id/tvValorUnitario"
        tools:text="Item do carrinho" />

    <ImageView
        android:id="@+id/ivFavoritar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/imagem_coracao"
        android:src="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/cor3" />


</androidx.constraintlayout.widget.ConstraintLayout>